# Palume kasutajal sisestada suvaline arv
echo -e "Sisesta suvaline arv: \c"
read arv

# Kontrollime, kas arv on 0 v천i 1
if [ $arv -eq 0 -o $arv -eq 1 ]; then
    echo "$arv - ei ole algarv"
else
    
    jagaja=2
    on_algarv=1


    while [ $jagaja -le $(($arv / 2)) ]; do
        # Kui arv jaguneb t채pselt jagajaga, siis ei ole tegemist algarvuga
        if [ $(($arv % $jagaja)) -eq 0 ]; then
            on_algarv=0
            break
        fi
        jagaja=$(($jagaja + 1))
    done

    # V채ljund vastavalt sellele, kas arv on algarv v천i mitte
    if [ $on_algarv -eq 1 ]; then
        echo "$arv - on algarv"
    else
        echo "$arv - ei ole algarv"
    fi
fi
